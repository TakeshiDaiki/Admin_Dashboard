{
  "compilerOptions": {
    /* Target */
    "target": "es2016",

    /* Module system */
    "module": "commonjs",
    "moduleResolution": "node",

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Strictness */
    "strict": true,

    /* Speed + Production */
    "skipLibCheck": true,

    /* Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* ðŸ”‘ CLAVE: tipos globales */
    "types": ["node", "jest"]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
